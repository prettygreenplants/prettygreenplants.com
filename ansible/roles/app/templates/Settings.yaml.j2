Sokly:
  PrettyGreenPlants:
    toggleBeta: false

Neos:
  Flow:
    persistence:
      backendOptions:
        host: '{{ mysql_db_host }}'
        user: '{{ mysql_db_user }}'
        password: '{{ mysql_db_password }}'
        dbname: '{{ mysql_db_name }}'
{% if aws_cloud and 'live' in group_names %}

  GoogleAnalytics:
    authentication:
      applicationName: '{{ google_analytic_app_name }}'
      clientId: '{{ google_analytic_client_id }}'
      clientSecret: '{{ google_analytic_client_secret }}'
      developerKey: '{{ google_analytic_developer_key }}'
    sites:
      prettygreenplants:
        trackingId: '{{ google_analytic_tracking_id }}'
        profileId: '{{ google_analytic_profile_id }}'
{% endif %}
